<h1>Burger Logger</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
     <li>
	    {{burger_name}}

	    <button class="change-devoured" data-id="{{id}}">
        Devour It!
	    </button>
    </li>

    {{/unless}}
  {{/each}}
</ul>


<h2>Devoured Burgers</h2>
<ul class="movetoright">
  {{#each burgers}}
    {{#if devoured}}
     <li>
	  {{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>

