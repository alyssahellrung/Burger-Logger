<div class="container everything">
<div class="jumbotron jumbotron-fluid">
  <div class="row">
    <div class="col-md-4">
      <i class="fas fa-hamburger fa-8x"></i>
    </div>
    <div class="col-md-4">
    <h1 class="display-4">Burger Logger</h1>
    <p class="lead">Keep track of burgers you want to eat!</p>
    </div>
    <div class="col-md-4">
      <i class="fas fa-hamburger fa-8x"></i>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
     <h3>Burgers I Want to Eat!</h3>
      <ul class="left">
        {{#each burgers}}
        {{#unless devoured}}
          <li>
	         {{burger_name}}

	         <button class="change-devoured" data-id="{{id}}">
           Devour It!
	         </button>
          </li>

         {{/unless}}
       {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <h3>Burgers I've Already Eaten!</h3>
        <ul class="right">
          {{#each burgers}}
          {{#if devoured}}
            <li>
	          {{burger_name}}
            </li>
          {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12" id="add">
     <h3 class=add>Add a Burger</h3>
       <form class="create-form">

       <div class="form-group">
       <label for="bu">Burger Name:</label>
       <input type="text" id="bu" name="name">

       <button type="submit">Add Burger</button>
       </form>
    </div>
  </div>
</div>
</div>